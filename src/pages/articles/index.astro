---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ArticleCard from '../../components/ArticleCard.astro';

const articles = [
    {
        title: "Visiting the Delicate Craftsmanship of Takayama Chasen in Nara",
        category: "Tea",
        date: "2024.01.15",
        image: "https://images.unsplash.com/photo-1582794543139-8ac92a9ab58d?q=80&w=2070&auto=format&fit=crop",
        slug: "takayama-chasen-nara",
        colorClass: "jp-matcha"
    },
    {
        title: "Incorporating Antique Imari Plates into Modern Table Settings",
        category: "Ceramics",
        date: "2024.01.12",
        image: "https://images.unsplash.com/photo-1628108500295-d0505b223023?q=80&w=2070&auto=format&fit=crop",
        slug: "antique-imari-plates",
        colorClass: "jp-clay"
    },
    {
        title: "The Deep Blue World of Awa Indigo: A Workshop Visit",
        category: "Kimono",
        date: "2024.01.08",
        image: "https://images.unsplash.com/photo-1593132623337-37a57a840c83?q=80&w=1956&auto=format&fit=crop",
        slug: "awa-indigo-workshop",
        colorClass: "jp-indigo"
    },
    {
        title: "Kyoto's Hidden Tea Houses: A Journey Through Uji",
        category: "Tea",
        date: "2024.01.05",
        image: "https://images.unsplash.com/photo-1514733670139-4d87a1941d55?q=80&w=2089&auto=format&fit=crop",
        slug: "kyoto-uji-tea-houses",
        colorClass: "jp-matcha"
    },
    {
        title: "The Beauty of Kintsugi: Embracing Imperfection",
        category: "Ceramics",
        date: "2024.01.02",
        image: "https://images.unsplash.com/photo-1610701596007-11502861dcfa?q=80&w=2070&auto=format&fit=crop",
        slug: "kintsugi-beauty",
        colorClass: "jp-clay"
    },
    {
        title: "Vintage Kimono: A Beginner's Guide to Buying and Wearing",
        category: "Kimono",
        date: "2023.12.28",
        image: "https://images.unsplash.com/photo-1528164344705-47542687000d?q=80&w=2092&auto=format&fit=crop",
        slug: "vintage-kimono-guide",
        colorClass: "jp-indigo"
    }
];
---

<Layout title="All Articles | Japan Souvenir">
    <Header />

    <!-- Page Header -->
    <section class="pt-32 pb-16 bg-jp-offwhite">
        <div class="container mx-auto px-6">
            <span class="text-jp-indigo text-xs font-bold tracking-[0.3em] uppercase mb-4 block">Collection</span>
            <h1 class="text-4xl md:text-5xl font-serif mb-6">All Articles</h1>
            <p class="text-jp-gray max-w-2xl">
                Explore our collection of stories about Japanese craftsmanship, artisans, and the treasures worth bringing home.
            </p>
        </div>
    </section>

    <!-- Articles Grid -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {articles.map((article, index) => (
                    <ArticleCard
                        title={article.title}
                        category={article.category}
                        date={article.date}
                        image={article.image}
                        slug={article.slug}
                        colorClass={article.colorClass}
                        delay={`${(index % 3) * 0.1}s`}
                    />
                ))}
            </div>
        </div>
    </section>

    <Footer />
</Layout>
